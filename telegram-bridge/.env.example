# Telegram Bot Token — get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Anthropic API Key — get from console.anthropic.com
ANTHROPIC_API_KEY=

# Path to memory files (default: kit/memory relative to project root)
MEMORY_PATH=../kit/memory

# Claude model for chat responses
CHAT_MODEL=claude-sonnet-4-5-20250929

# Claude model for group chat classifier (should I respond?)
CLASSIFIER_MODEL=claude-haiku-4-5-20251001

# Max conversation context messages to include
MAX_CONTEXT_MESSAGES=20

# SECURITY: Comma-separated Telegram user IDs to allow.
# When empty, the bot will NOT respond to anyone. You must set this.
# Find your ID by messaging @userinfobot on Telegram.
ALLOWED_USERS=

# Enable group chat responses
GROUP_CHAT_ENABLED=true

# Port for health check server
PORT=3000

# Agent Mode (uses Claude Code SDK for full tool access)
# When enabled, Telegram messages are processed through Claude Code with
# Bash, Read, Write, Edit, Glob, Grep tool access instead of the raw Anthropic API.
AGENT_MODE=false

# Working directory for Claude Code in agent mode (default: parent of telegram-bridge)
AGENT_CWD=

# Max agentic turns per message (default: 25)
AGENT_MAX_TURNS=25

# Comma-separated list of allowed tools in agent mode
# (default: Read,Write,Edit,Glob,Grep,Bash)
# AGENT_ALLOWED_TOOLS=Read,Write,Edit,Glob,Grep,Bash
